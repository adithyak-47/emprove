<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Productivity report</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Karla:wght@600&display=swap');

        body {
            font-family: Karla, sans-serif;
        }

        .tagline {
            font-size: 1.2em;
        }
    </style>
</head>

<body class="bg-light">
    <nav class="navbar navbar-expand-lg py-3 navbar-dark bg-dark">
        <div class="container">
            <h1>
                <a style="text-decoration: none;" class="text-white" href="/">EMPROVE</a>
            </h1>
            <ul class="nav-links" style="display: flex; list-style-type: none;">
                <li>
                    <p class="text-white" style="text-align: right">
                        <%= userDetails.email %> &nbsp;&nbsp;
                    </p>
                </li>
                <li><a style="text-decoration: none;" class="text-white" href="/">| Sign out</a></li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <br>
        <h1>Productivity Report</h1>
        <h5><%= new Date();%></h5>
        <br>
        <div class="row">
            <div class="col-md-6">
                <h2>User Details</h2>
                <p>Name: <span style="color: brown;"><%= userDetails.name %> </span>
                </p>
                <p>Email ID: <span style="color: brown;"><%= userDetails.email %></span>
                </p>
                <!-- <p>Pomodoro Count: <%= userDetails.pomodoroCount %>
                </p>
                <p>Drowsiness Score: <%= userDetails.drowsinessScore %>
                </p> -->
            </div>
            <div class="col-md-6">
                <h2>Pending Tasks</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Deadline</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% taskDetails.forEach(function(task) { %>
                            <tr>
                                <td>
                                    <%= task.name %>
                                </td>
                                <td>
                                    <%= task.description %>
                                </td>
                                <td>
                                    <%= task.deadline %>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>

</html>